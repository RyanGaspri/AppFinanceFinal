<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.calcprojetoint.tela_taxa_retorno"
    android:background="@drawable/card_cor"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Calcule sua taxa de retorno"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:textSize="30dp"
        android:textStyle="bold"
         />

    <EditText
        android:id="@+id/EditValorInicial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:text="Valor inicial do investimento"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:inputType="numberDecimal"
        />



    <EditText
        android:id="@+id/EditValorFinal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Valor final do investimento"
        android:padding="20dp"
        android:inputType="numberDecimal"
        />

    <EditText
        android:id="@+id/EditPeriodo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="PerÃ­odo em anos do investimento"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:inputType="numberDecimal"/>

    <Button
        android:id="@+id/botaoCalculeTaxa"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-light"
        android:text="Calcule"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#FD1A09"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/textViewResultadoTaxa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/black"
        android:padding="20dp"
        android:textStyle="bold"
       />

</LinearLayout>